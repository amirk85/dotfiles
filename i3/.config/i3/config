# Client borders and gaps
client.focused          #f38ba8 #f38ba8 #cdd6f4 #f38ba8 #f38ba8
client.focused_inactive #45475a #45475a #cdd6f4 #45475a #45475a
client.unfocused        #313244 #313244 #6c7086 #313244 #313244
client.urgent           #fab387 #fab387 #1e1e2e #fab387 #fab387
client.placeholder      #1e1e2e #1e1e2e #cdd6f4 #1e1e2e #1e1e2e
client.background       #1e1e2e

gaps inner 8
gaps outer 8
smart_gaps on
default_border pixel 2
hide_edge_borders smart

for_window [class="ghostty"] border pixel 2

# Autostart applications
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec --no-startup-id picom -b --config ~/.config/picom/picom.conf
exec --no-startup-id xrandr --output HDMI-0 --mode 1920x1080 --rate 120
exec --no-startup-id feh --bg-scale --randomize ~/Pictures/wallpapers/*
exec --no-startup-id sh ~/.fehbg
exec --no-startup-id dunst
exec ~/scripts/caps_to_esc

exec_always --no-startup-id autotiling
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id sh -c "sleep 1 && blueman-applet"

# Keybindings for specific applications
bindsym Control+Shift+n nop

bindsym $mod+Return exec ghostty -e zsh
bindsym $mod+Shift+f exec nautilus
bindsym $mod+b exec zen-browser
bindsym $mod+Shift+p exec ~/.config/rofi/rofi-powermenu.sh
bindsym $mod+space exec "rofi -show drun"
bindsym $mod+w exec "feh --bg-scale --randomize ~/Pictures/backgrounds/*"
bindsym $mod+Shift+c exec ~/scripts/caps_to_esc

# Scripts
bindsym $mod+comma exec --no-startup-id ~/scripts/brightness down
bindsym $mod+period exec --no-startup-id ~/scripts/brightness up
bindsym $mod+Shift+s exec --no-startup-id ~/scripts/screenshot
bindsym $mod+Shift+d exec --no-startup-id ~/scripts/define_word
bindsym $mod+Shift+i exec --no-startup-id bash -c 'pgrep -x btop >/dev/null && pkill -x btop || ghostty -e btop'
